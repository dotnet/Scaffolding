<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Contains utilities used by ASP.NET Core Code Generation packages.</Description>
    <TargetFrameworks>$(BuildTfm)</TargetFrameworks>
    <AssemblyName>Microsoft.VisualStudio.Web.CodeGeneration.Utils</AssemblyName>
    <RootNamespace>Microsoft.VisualStudio.Web.CodeGeneration.Utils</RootNamespace>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
    <PackageTags>aspnetcore;codegenerator;scaffolding;visualstudioweb</PackageTags>
    <Nullable>disable</Nullable>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\..\Shared\Microsoft.DotNet.Scaffolding.Shared\General\**\*.resx">
      <Link>Shared\%(RecursiveDir)%(FileName).resx</Link>
    </EmbeddedResource>
    <ProjectReference Include="$(RepoRoot)src\Shared\Microsoft.DotNet.Scaffolding.Shared\Microsoft.DotNet.Scaffolding.Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="$(MicrosoftCodeAnalysisCSharpWorkspacesPackageVersion)" />
    <PackageReference Include="Microsoft.CodeAnalysis.Workspaces.MSBuild" Version="$(MicrosoftCodeAnalysisWorkspacesMSBuildPackageVersion)" />
    <PackageReference Include="Newtonsoft.Json" Version="$(NewtonsoftJsonPackageVersion)" />
  </ItemGroup>

  <!-- TFM-specific Microsoft.Build versions: net8.0 uses 17.8.x, net9.0 uses 17.12.x, net10/11 use 18.x -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="Microsoft.Build" Version="$(MicrosoftBuildPackageVersion8)" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'net9.0'">
    <PackageReference Include="Microsoft.Build" Version="$(MicrosoftBuildPackageVersion9)" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' != 'net8.0' and '$(TargetFramework)' != 'net9.0'">
    <PackageReference Include="Microsoft.Build" Version="$(MicrosoftBuildPackageVersion)" />
  </ItemGroup>

  <ItemGroup>
    <None Pack="true" Include="$(RepoRoot)src\Scaffolding\README.md"  PackagePath="\"/>
  </ItemGroup>
</Project>
