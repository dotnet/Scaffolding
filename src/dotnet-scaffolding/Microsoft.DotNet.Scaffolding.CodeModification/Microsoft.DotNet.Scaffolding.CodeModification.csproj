<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(BuildTfm)</TargetFrameworks>
    <PackageTags>dotnet;scaffold;</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="$(RepoRoot)src\dotnet-scaffolding\Microsoft.DotNet.Scaffolding.Core\Microsoft.DotNet.Scaffolding.Core.csproj" />
    <ProjectReference Include="$(RepoRoot)src\dotnet-scaffolding\Microsoft.DotNet.Scaffolding.Roslyn\Microsoft.DotNet.Scaffolding.Roslyn.csproj" />
  </ItemGroup>

  <!-- TFM-specific Microsoft.Build versions to fix NU1701: net9.0 uses 17.x (has net9.0 assets), net10/11 use 18.x -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net9.0'">
    <PackageReference Include="Microsoft.Build" VersionOverride="$(MicrosoftBuildPackageVersion9)" ExcludeAssets="runtime" />
  </ItemGroup>

  <ItemGroup>
    <None Pack="true" Include="README.md"  PackagePath="\"/>
  </ItemGroup>
</Project>
