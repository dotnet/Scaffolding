<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(BuildTfm)</TargetFrameworks>
    <PackageTags>dotnet;scaffold;</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <!-- Exclude net10.0 folder .cs files from compilation to avoid duplicate definitions -->
    <Compile Remove="DbContext\net10.0\**\*.cs" />
    <None Include="DbContext\net10.0\**\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Mono.TextTemplating" />
    <PackageReference Include="Microsoft.Extensions.DependencyModel" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(RepoRoot)src\dotnet-scaffolding\Microsoft.DotNet.Scaffolding.Core\Microsoft.DotNet.Scaffolding.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="DbContext\net11.0\NewDbContext.tt">
      <PackagePath>Templates\</PackagePath>
      <LastGenOutput>NewDbContext.cs</LastGenOutput>
      <Generator>TextTemplatingFilePreprocessor</Generator>
      <Pack>true</Pack>
    </None>
    <None Pack="true" Include="README.md" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="DbContext\net11.0\NewDbContext.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>NewDbContext.tt</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <!-- VS T4 templating service -->
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>
</Project>
