<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Scaffolding tool with specific components</Description>
    <TargetFramework>net8.0</TargetFramework>
    <OutputType>exe</OutputType>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackAsTool>true</PackAsTool>
    <PackageTags>dotnet;scaffold;aspnet;</PackageTags>
    <PackageId>Microsoft.dotnet-scaffold-aspnet</PackageId>
    <RootNamespace>Microsoft.DotNet.Tools.Scaffold.AspNet</RootNamespace>
    <NoWarn>$(NoWarn);8002</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Spectre.Console" />
    <PackageReference Include="Spectre.Console.Cli" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(RepoRoot)src\dotnet-scaffolding\Microsoft.DotNet.Scaffolding.Helpers\Microsoft.DotNet.Scaffolding.Helpers.csproj" />
    <ProjectReference Include="$(RepoRoot)src\dotnet-scaffolding\Microsoft.DotNet.Scaffolding.ComponentModel\Microsoft.DotNet.Scaffolding.ComponentModel.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Commands\CodeModificationConfigs\*.json">
      <Pack>true</Pack>
    </EmbeddedResource>
    <None Pack="true" Include="$(RepoRoot)src\dotnet-scaffolding\dotnet-scaffold-aspnet\Templates\*\*.tt" PackagePath="Templates\" />
    <None Pack="true" Include="$(RepoRoot)src\dotnet-scaffolding\Microsoft.DotNet.Scaffolding.Helpers\Templates\DbContext\*.tt" PackagePath="Templates\DbContext\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Templates\MinimalApi\MinimalApi.tt">
      <Generator>TextTemplatingFilePreprocessor</Generator>
      <LastGenOutput>MinimalApi.cs</LastGenOutput>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Templates\MinimalApi\MinimalApi.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>MinimalApi.tt</DependentUpon>
    </Compile>
    <Compile Update="Templates\MinimalApi\MinimalApiEf.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>MinimalApiEf.tt</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Pack="true" Include="$(RepoRoot)src\dotnet-scaffolding\dotnet-scaffold-aspnet\Templates\*\*.tt" PackagePath="Templates\" />
    <None Pack="true" Include="$(RepoRoot)src\dotnet-scaffolding\Microsoft.DotNet.Scaffolding.Helpers\Templates\DbContext\*.tt" PackagePath="Templates\DbContext\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Templates\MinimalApi\MinimalApiEf.tt">
      <Generator>TextTemplatingFilePreprocessor</Generator>
      <LastGenOutput>MinimalApiEf.cs</LastGenOutput>
    </None>
  </ItemGroup>

</Project>
